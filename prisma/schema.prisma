datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model City {
  id    Int         @id @default(autoincrement())
  name  String
  uf    String
  users User[]
}

model User {
  id    String     @id
  name  String
  email String
  password String
  salt String
  city  City       @relation(fields: [cityId], references: [id])
  cityId Int
}