generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model City {
  id    Int         @id @default(autoincrement())
  name  String
  uf    String
  users User[]
}

model User {
  id    String     @id
  email String
  name  String
  city  City       @relation(fields: [cityId], references: [id])
  cityId Int
}





